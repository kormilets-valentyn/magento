<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="loyaltypoints" translate="label" sortOrder="1">
            <label>Percent of cashback</label>
        </tab>
        <section id="loyalty" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Set of cashback</label>
            <tab>loyaltypoints</tab>
            <resource>LoyaltyGroup_LoyaltyPoints::loyalty</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Show count of label</label>
                <field id="display_text"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0">
                    <label>Input percent of cashback</label>
                    <comment>Some comment</comment>
                </field>
            </group>
        </section>
    </system>
</config>